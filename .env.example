# Environment variables for ReskPoints
# Copy this file to .env and modify as needed

# Application settings
DEBUG=true
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-secret-key-change-in-production

# Database settings
DATABASE_URL=postgresql://reskpoints:password@localhost:5432/reskpoints
TIMESCALE_URL=postgresql://reskpoints:password@localhost:5433/reskpoints_metrics
CLICKHOUSE_URL=http://localhost:8123

# Cache settings
REDIS_URL=redis://localhost:6379/0

# Monitoring settings
PROMETHEUS_PORT=9090

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Authentication settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Rate limiting
RATE_LIMIT_REQUESTS=100

# External integrations
ALERT_WEBHOOK_URL=